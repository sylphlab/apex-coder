// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "watch",
            "dependsOn": [
                "npm: watch:tsc",
                "npm: watch:esbuild"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "npm",
            "script": "watch:esbuild",
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "label": "npm: watch:esbuild",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
		{
            "type": "npm",
            "script": "watch:tsc",
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "label": "npm: watch:tsc",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
		{
			"label": "pnpm: compile",
			"type": "shell",
			"command": "pnpm run compile",
			"problemMatcher": [
				"$tsc",
		        "$eslint-compact"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		    "presentation": {
		        "reveal": "silent",
		        "clear": true
		    }
		},
		{
			"label": "Run: Show Panel",
			"type": "shell",
			"command": "${command:apex-coder.showPanel}",
			"presentation": {
				"reveal": "never",
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Start Vite Dev Server",
			"type": "shell",
			"command": "pnpm --filter webview-ui dev",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "ready in \\d+ms"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Start Full Dev Environment",
			"dependsOn": [
				"pnpm: compile",
				"Start Vite Dev Server"
			],
			"problemMatcher": []
		},
		{
			"label": "Start Dev Server Only",
			"type": "shell",
			"command": "pnpm --filter webview-ui dev",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true
			},
			"problemMatcher": []
		}
	]
}
