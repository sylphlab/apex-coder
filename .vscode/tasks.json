{
  "version": "2.0.0",
  "tasks": [
    // Compile Task
    {
      "label": "npm: compile",
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": "$tsc" // Use standard TSC problem matcher
    },
    // Backend watch tasks
    {
      "label": "npm: watch:esbuild",
        "type": "npm",
        "script": "watch:esbuild",
        "group": "build",
        "problemMatcher": "$esbuild-watch",
        "isBackground": true,
        "presentation": { 
          "reveal": "always", 
          "panel": "shared",
          "group": "watchTasks",
          "close": true
         },
         "options": {
           "statusbar": {
             "hide": true
           }
         }
    },
    {
      "label": "npm: watch:tsc",
        "type": "npm",
        "script": "watch:tsc",
        "group": "build",
        "problemMatcher": "$tsc-watch",
        "isBackground": true,
        "presentation": { 
          "reveal": "always", 
          "panel": "shared",
          "group": "watchTasks",
          "close": true
       },
       "options": {
         "statusbar": {
           "hide": true
         }
       }
    },
    {
      "label": "npm: watch:vite",
      "type": "npm",
      "script": "watch:vite",
      "group": "build",
      "problemMatcher": {
        "owner": "vite",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "(?:ERROR|WARN)(?:.*?)(?:src|webview-ui)/([^:]*):([0-9]+):([0-9]+)\\s+-\\s+(.+)",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE v[0-9]\\.[0-9]\\.[0-9]",
          "endsPattern": "(?:Local|Network):\\s+http"
        },
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always", 
        "panel": "shared",
        "group": "watchTasks",
        "close": true
      },
      "detail": "vite development server",
      "options": {
        "statusbar": {
          "hide": true
        }
      }
    },
    // Meta task for Full Dev Watch (Default Build Task)
    {
        "label": "Start Full Dev Watch",
        "dependsOn": [
            "npm: watch:esbuild",
            "npm: watch:tsc",
            "npm: watch:vite"
        ],
        "problemMatcher": [],
        "group": { "kind": "build", "isDefault": true },
        "options": {
          "statusbar": {
            "hide": true
          }
        }
    },
    {
        "label": "Run: Show Panel",
        "type": "shell",
        "command": "${command:apex-coder.showPanel}",
        "presentation": { "reveal": "always", "clear": true },
        "problemMatcher": [],
        "options": {
          "statusbar": {
            "hide": true
          }
        }
    },
    {
      "label": "Kill All Terminals",
      "type": "shell",
      "command": "echo ${input:Terminate vite:watch} ${input:Terminate tsc:watch} ${input:Terminate esbuild:watch}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "close": true
      },
      "options": {
        "statusbar": {
          "hide": true
        }
      },
    }
  ],
  "inputs": [
    {
      "id": "Terminate vite:watch",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "npm: watch:vite"
    },
    {
      "id": "Terminate tsc:watch",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "npm: watch:tsc"
    },
    {
      "id": "Terminate esbuild:watch",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "npm: watch:esbuild"
    }
  ]
}